generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Document {
  id          String   @id @default(cuid())
  filename    String
  title       String?
  totalPages   Int
  processedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  chunks      Chunk[]
  
  @@map("documents")
}

model Chunk {
  id          String   @id @default(cuid())
  documentId  String
  content     String
  sectionName String?
  pageNumber  Int?
  chunkIndex  Int
  metadata    Json?    // Store additional metadata as JSON
  createdAt   DateTime @default(now())
  
  document    Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  embedding   Embedding?
  
  @@map("chunks")
}

model Embedding {
  id        String   @id @default(cuid())
  chunkId   String   @unique
  vector    String   // Store as JSON string
  dimension Int      @default(384)
  createdAt DateTime @default(now())
  
  chunk     Chunk    @relation(fields: [chunkId], references: [id], onDelete: Cascade)
  
  @@map("embeddings")
}